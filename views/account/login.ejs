<%- include('../partials/head.ejs') %>

<section class="logreg_header">
  <div>
    <h1>Inloggen</h1>
    <span>Vul je gegevens in om in te loggen</span>
    <p class="error"><%= message %></p>
  </div>
</section>

<section class="logreg_form">
  <form method="post">
    <input type="text" name="username" placeholder="Gebruikersnaam" />
    <input type="password" name="password" placeholder="Wachtwoord" />
    <input type="submit" value="Inloggen">
    <p>Geen account? <a href="/account/register">Maak er een aan!</a></p>
  </form>
  <a class="twitterLogin" href="/twitter">Inloggen met Twitter</a>
</section>

