<%- include('../partials/head.ejs') %>

  <h1>Hi <span id="usName"><%= data.username %></span></h1>
  <p>Welkom op de chat</p>

  <ul id="chatMessages">
    <% chat.forEach(function(item) { %>
      <% if(item.username === data.username) { %>
        <li class="your"><span><%= item.username %></span> <%= item.message %></li>
      <% } else { %>
        <li><span><%= item.username %></span> <%= item.message %></li>
      <% } %>
    <% }); %>
  </ul>


  <%= chat[0].username %>

  <form id="chatForm">
    <input id="message" autocomplete="off" />
    <button>Verstuur</button>
  </form>

  <audio id="sound">
    <source src="/sound/beep.ogg" type="audio/ogg">
    <source src="/sound/beep.mp3" type="audio/mpeg">
  </audio>

  <a href="/account/logout">Uitloggen</a>

  <script src="/socket.io/socket.io.js"></script>
  <script type="text/javascript" src="/js/chat.js"></script>

<%- include('../partials/foot.ejs') %>
